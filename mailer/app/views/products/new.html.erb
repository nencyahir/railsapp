<%= form_with model: @product do |form| %>
    <div>
      <%= form.label :name %><br>
      <%= form.text_field :name %>
    </div>
  
    <div>
      <%= form.label :price %><br>
      <%= form.text_area :price %><br>
    </div>
  
    <div>
      <%= form.label :description %><br>
      <%= form.text_area :description%><br>
    </div>
    <div>
      <%= form.submit %>
    </div>
  <% end %>