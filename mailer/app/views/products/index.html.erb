<style>
table, th, td {
  border: 1px solid black;
  border-collapse: collapse;
}
th, td {
  padding: 15px;
}
</style>


<h1>List Of Products</h1>
<table>   
<tr>   
 <th>Name</th>   
 <th>Price</th>   
 <th>Description</th>  
</tr>   

<% @products.each do |product| %>   
   <tr>   
     <td><%= product.name %></td>   
     <td><%= product.price %></td>   
     <td><%= product.description %></td>    
<td><%= link_to "Delete", product_path(product), data: { turbo_method: :delete } %>
</td>
    </tr>   
<% end %>   
</table>  

<h2>Want to add new product?</h2>

<%= button_to 'New',  new_product_path, method: :get%>

